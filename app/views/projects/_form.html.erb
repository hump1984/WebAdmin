
<%= form_for @project do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <tr>
    <td>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
    </td>
    <td>
      <p>
        <%= f.label :number %><br>
        <%= f.text_field :number %>
      </p>
    </td>
    <td>
      <p>
        <%= f.label :active %>
        <%= f.check_box :active %>
      </p>
    </td>
    <td>
      <p>
        <%= f.submit %>
      </p>
    </td>
  </tr>
<% end %>
